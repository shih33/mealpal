<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingFragment"
    android:padding="10dp">


    <!--聚會設定 -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/set_gather_pic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">
        <!--日期-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期 "
            android:textSize="30sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/date_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize="34sp"
            android:background="@drawable/setting_input_1"
            android:paddingLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">
        <!--時間-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="時間 "
            android:textSize="30sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/time_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize="34sp"
            android:background="@drawable/setting_input_1"
            android:paddingLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">
        <!--集合地點-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="集合地點 "
            android:textSize="30sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/gather_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize="34sp"
            android:background="@drawable/setting_input_1"
            android:paddingLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">
        <!--餐廳-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="餐廳 "
            android:textSize="30sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/restaurant_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize="34sp"
            android:background="@drawable/setting_input_1"
            android:paddingLeft="15dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="10dp">
        <!--備註-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="備註 "
            android:textSize="30sp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/note_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:textSize="34sp"
            android:background="@drawable/setting_input_1"
            android:paddingLeft="15dp"/>
    </LinearLayout>

    //Done
    <ImageButton
        android:id="@+id/meetdonebtn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/done_btn_red"
        android:backgroundTint="#FFF"/>


</LinearLayout>