<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WhoFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MealPal"
        android:textSize="30sp"
        android:textColor="#7E2E01"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你想找誰一起吃飯?"
        android:textColor="#FFC38C"
        android:textSize="30sp"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/findfriendbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/findfriendpic"
        android:backgroundTint="#FFF"/>

    <ImageButton
        android:id="@+id/sametastebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/sametastepic"
        android:backgroundTint="#FFF"/>


</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>